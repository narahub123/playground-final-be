{
  "openapi": "3.0.0",
  "info": {
    "title": "소셜미디어: playground",
    "version": "1.0.0",
    "description": "소셜미디어 PlayGround를 위한 API documentation",
    "license": {
      "name": "박나라",
      "url": "나중에 github 주소를 적을 것"
    }
  },
  "host": "http://localhost:5731",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "인증 페이지"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:5731",
      "description": "로컬 서버"
    }
  ],

  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "647d2f6e2c9d1c23c4b5e123" },
          "userId": { "type": "string", "example": "12345" },
          "username": { "type": "string", "example": "John Doe" },
          "email": { "type": "string", "example": "john.doe@example.com" },
          "birth": { "type": "string", "example": "1990-01-01" },
          "phone": {
            "type": "array",
            "items": { "type": "string" },
            "example": ["123-456-7890"]
          },
          "gender": {
            "type": "string",
            "enum": ["m", "f", "n", "b"],
            "example": "m"
          },
          "country": { "type": "string", "example": "Korea" },
          "language": { "type": "string", "example": "en" },
          "profileImage": {
            "type": "string",
            "example": "https://example.com/profile.jpg"
          },
          "location": { "type": "string", "example": "Seoul, Korea" },
          "intro": { "type": "string", "example": "Hello, I am John Doe." },
          "followings": {
            "type": "array",
            "items": { "type": "string", "example": "1234567890abcdef" }
          },
          "followers": {
            "type": "array",
            "items": { "type": "string", "example": "abcdef1234567890" }
          },
          "mutedUsers": {
            "type": "array",
            "items": { "type": "string", "example": "abcdef1234567890" }
          },
          "blockedUsers": {
            "type": "array",
            "items": { "type": "string", "example": "1234567890abcdef" }
          },
          "isPrivate": { "type": "boolean", "example": false },
          "isAuthorized": { "type": "boolean", "example": true },
          "isAuthenticated": { "type": "boolean", "example": true },
          "social": {
            "type": "array",
            "items": { "type": "string", "enum": ["google", "naver", "kakao"] },
            "example": ["google"]
          },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        },
        "required": [
          "userId",
          "username",
          "email",
          "birth",
          "gender",
          "location"
        ]
      },
      "Security": {
        "type": "object",
        "properties": {
          "twoFactorAuthentication": {
            "type": "string",
            "enum": ["sms", "app", "key", ""],
            "example": "sms"
          },
          "hideLabel": {
            "type": "boolean",
            "example": false
          },
          "protectRenewPassword": {
            "type": "boolean",
            "example": false
          },
          "connectedApps": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "app1"
            },
            "example": ["app1", "app2"]
          },
          "sessions": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "session123"
            },
            "example": ["session123", "session456"]
          },
          "loginHistory": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "2024-12-18T10:00:00Z"
            },
            "example": ["2024-12-18T10:00:00Z", "2024-12-17T15:30:00Z"]
          },
          "devices": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "device123"
            },
            "example": ["device123", "device456"]
          },
          "connectedAccounts": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "google"
            },
            "example": ["google", "facebook"]
          },
          "canBeInvited": {
            "type": "boolean",
            "example": true
          },
          "delegate": {
            "type": "object",
            "properties": {
              "groups": {
                "type": "array",
                "items": {
                  "type": "string",
                  "example": "group1"
                },
                "example": ["group1", "group2"]
              },
              "members": {
                "type": "array",
                "items": {
                  "type": "string",
                  "example": "user1"
                },
                "example": ["user1", "user2"]
              }
            }
          }
        },
        "required": [
          "twoFactorAuthentication",
          "hideLabel",
          "protectRenewPassword",
          "connectedApps",
          "sessions",
          "loginHistory",
          "devices",
          "connectedAccounts",
          "canBeInvited",
          "delegate"
        ]
      }
    }
  }
}
