{
  "openapi": "3.0.0",
  "info": {
    "title": "소셜미디어: playground",
    "version": "1.0.0",
    "description": "소셜미디어 PlayGround를 위한 API documentation",
    "license": {
      "name": "박나라",
      "url": "나중에 github 주소를 적을 것"
    }
  },
  "host": "http://localhost:5731",
  "basePath": "/",
  "tags": [
    {
      "name": "Auth",
      "description": "인증 페이지"
    }
  ],
  "servers": [
    {
      "url": "http://localhost:5731",
      "description": "로컬 서버"
    }
  ],
  "paths": {
    "/user/getUserByUserId/{userId}": {
      "get": {
        "summary": "사용자 정보 조회",
        "description": "사용자 ID를 기반으로 정보를 조회합니다.",
        "tags": ["Users"],
        "operationId": "getUserByUserId",
        "parameters": [
          {
            "name": "userId",
            "in": "path",
            "required": true,
            "description": "사용자 ID",
            "schema": {
              "type": "string",
              "example": "johndoe"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 사용자 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "johndoe 아이디를 가진 유저를 찾을 수 없습니다."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/getUserByEmail/{email}": {
      "get": {
        "summary": "이메일을 통한 사용자 정보 조회",
        "description": "이메일을 기반으로 사용자의 정보를 조회합니다.",
        "tags": ["Users"],
        "operationId": "getUserByEmail",
        "parameters": [
          {
            "name": "email",
            "in": "path",
            "required": true,
            "description": "사용자 이메일",
            "schema": {
              "type": "string",
              "example": "johndoe@example.com"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 사용자 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "johndoe@example.com 이메일을 가진 유저를 찾을 수 없습니다."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/user/getUserByPhone/{phone}": {
      "get": {
        "summary": "전화번호를 통한 사용자 정보 조회",
        "description": "전화번호를 기반으로 사용자의 정보를 조회합니다.",
        "tags": ["Users"],
        "operationId": "getUserByPhone",
        "parameters": [
          {
            "name": "phone",
            "in": "path",
            "required": true,
            "description": "사용자 전화번호",
            "schema": {
              "type": "string",
              "example": "+11234567890"
            }
          }
        ],
        "responses": {
          "200": {
            "description": "조회된 사용자 정보",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/User"
                }
              }
            }
          },
          "404": {
            "description": "사용자를 찾을 수 없음",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "message": {
                      "type": "string",
                      "example": "+11234567890 전화번호를 가진 유저를 찾을 수 없습니다."
                    }
                  }
                }
              }
            }
          }
        }
      }
    },
    "/signup/checkEmailDuplicate": {
      "post": {
        "tags": ["Auth"],
        "summary": "회원 가입 시 이메일 중복 확인",
        "description": "사용자가 제공한 이메일이 이미 등록된 이메일인지 확인합니다.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "사용자 이메일을 포함하는 요청 본문",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "user@example.com",
                  "description": "이메일 주소"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "이메일 중복 여부",
            "schema": {
              "type": "object",
              "properties": {
                "isDuplicate": {
                  "type": "boolean",
                  "example": false,
                  "description": "이메일이 중복되었는지 여부"
                }
              }
            }
          },
          "400": {
            "description": "이메일이 제공되지 않은 경우",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "이메일을 제공해주세요.",
                  "description": "에러 메시지"
                }
              }
            }
          }
        }
      }
    },
    "/signup/checkUserIdDuplicate": {
      "post": {
        "tags": ["Auth"],
        "summary": "회원 가입 시 사용자 아이디 중복 확인",
        "description": "사용자가 제공한 사용자 아이디가 이미 등록된 아이디인지 확인합니다.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "사용자 아이디를 포함하는 요청 본문",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "userId": {
                  "type": "string",
                  "example": "user123",
                  "description": "사용자 아이디"
                }
              }
            }
          }
        ],
        "responses": {
          "200": {
            "description": "아이디 중복 여부",
            "schema": {
              "type": "object",
              "properties": {
                "isDuplicate": {
                  "type": "boolean",
                  "example": false,
                  "description": "사용자 아이디가 중복되었는지 여부"
                }
              }
            }
          },
          "400": {
            "description": "사용자 아이디가 제공되지 않은 경우",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "사용자 아이디를 제공해주세요.",
                  "description": "에러 메시지"
                }
              }
            }
          }
        }
      }
    },
    "/signup/registerUser": {
      "post": {
        "tags": ["Auth"],
        "summary": "회원 가입 시 사용자 정보 등록",
        "description": "사용자가 제공한 정보를 기반으로 새로운 사용자를 등록하고, 인증 이메일을 전송합니다.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "사용자 정보를 포함하는 요청 본문",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "user": {
                  "type": "object",
                  "properties": {
                    "birth": {
                      "type": "object",
                      "properties": {
                        "year": {
                          "type": "string",
                          "example": "1990",
                          "description": "출생년도"
                        },
                        "month": {
                          "type": "string",
                          "example": "01",
                          "description": "출생월"
                        },
                        "date": {
                          "type": "string",
                          "example": "01",
                          "description": "출생일"
                        }
                      },
                      "required": ["year", "month", "date"]
                    },
                    "email": {
                      "type": "string",
                      "example": "user@example.com",
                      "description": "이메일"
                    },
                    "phone": {
                      "type": "string",
                      "example": "010-1234-5678",
                      "description": "전화번호"
                    },
                    "language": {
                      "type": "string",
                      "example": "ko-KR",
                      "description": "언어 설정"
                    },
                    "notifications": {
                      "type": "object",
                      "properties": {
                        "messages": {
                          "type": "boolean",
                          "example": true,
                          "description": "메시지 알림 여부"
                        },
                        "replies": {
                          "type": "boolean",
                          "example": true,
                          "description": "댓글 알림 여부"
                        },
                        "newFollower": {
                          "type": "boolean",
                          "example": true,
                          "description": "새 팔로워 알림 여부"
                        },
                        "posts": {
                          "type": "boolean",
                          "example": true,
                          "description": "게시글 알림 여부"
                        }
                      },
                      "required": [
                        "messages",
                        "replies",
                        "newFollower",
                        "posts"
                      ]
                    },
                    "password": {
                      "type": "string",
                      "example": "password123",
                      "description": "비밀번호"
                    },
                    "profileImage": {
                      "type": "string",
                      "example": "image_url",
                      "description": "프로필 이미지 URL"
                    },
                    "userId": {
                      "type": "string",
                      "example": "user123",
                      "description": "사용자 아이디"
                    },
                    "username": {
                      "type": "string",
                      "example": "홍길동",
                      "description": "사용자 이름"
                    },
                    "device": {
                      "type": "object",
                      "properties": {
                        "type": {
                          "type": "string",
                          "example": "mobile",
                          "description": "기기 종류"
                        },
                        "os": {
                          "type": "string",
                          "example": "android",
                          "description": "기기 운영체제"
                        },
                        "browser": {
                          "type": "string",
                          "example": "chrome",
                          "description": "기기 브라우저"
                        }
                      },
                      "required": ["type", "os", "browser"]
                    },
                    "location": {
                      "type": "object",
                      "properties": {
                        "country": {
                          "type": "string",
                          "example": "KR",
                          "description": "국가"
                        },
                        "state": {
                          "type": "string",
                          "example": "Seoul",
                          "description": "주"
                        },
                        "city": {
                          "type": "string",
                          "example": "Gangnam",
                          "description": "도시"
                        },
                        "county": {
                          "type": "string",
                          "example": "Seocho",
                          "description": "군"
                        }
                      },
                      "required": ["country", "state", "city", "county"]
                    },
                    "ip": {
                      "type": "string",
                      "example": "192.168.1.1",
                      "description": "사용자의 IP 주소"
                    }
                  },
                  "required": [
                    "email",
                    "phone",
                    "language",
                    "password",
                    "userId",
                    "username",
                    "birth",
                    "notifications",
                    "device",
                    "location",
                    "ip"
                  ]
                }
              }
            }
          }
        ],
        "responses": {
          "201": {
            "description": "사용자 등록 성공",
            "schema": {
              "type": "object",
              "properties": {
                "success": {
                  "type": "boolean",
                  "example": true,
                  "description": "회원 가입 성공 여부"
                }
              }
            }
          },
          "400": {
            "description": "필수 정보 미제공",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "이메일 혹은 휴대폰이 제공되어야 합니다.",
                  "description": "에러 메시지"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "서버 오류가 발생했습니다.",
                  "description": "에러 메시지"
                }
              }
            }
          }
        }
      }
    },
    "/oauth/callback": {
      "get": {
        "tags": ["Auth"],
        "summary": "OAuth 인증 콜백 처리",
        "description": "OAuth 인증을 완료한 후, 인증 코드와 인증 타입을 통해 사용자 정보를 가져오고 기존 유저 여부를 확인합니다.",
        "parameters": [
          {
            "name": "code",
            "in": "query",
            "description": "OAuth 인증 코드",
            "required": true,
            "type": "string",
            "example": "authorization_code_example"
          },
          {
            "name": "state",
            "in": "query",
            "description": "OAuth 인증 타입 (예: 구글, 페이스북 등)",
            "required": true,
            "type": "string",
            "example": "google"
          }
        ],
        "responses": {
          "200": {
            "description": "사용자 정보가 성공적으로 처리되었을 경우",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "OAuth 인증 성공",
                  "description": "OAuth 인증이 성공적으로 완료되었음을 알리는 메시지"
                }
              }
            }
          },
          "400": {
            "description": "잘못된 요청 (인가 코드나 인증 타입 미제공)",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "인가 코드 혹은 인증 타입이 필요합니다.",
                  "description": "에러 메시지"
                }
              }
            }
          },
          "500": {
            "description": "서버 오류",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "유저 정보 취득 실패",
                  "description": "유저 정보 취득 실패 시 반환되는 메시지"
                }
              }
            }
          }
        }
      }
    },
    "/login/verifyPassword": {
      "post": {
        "tags": ["Auth"],
        "summary": "로그인 시 비밀번호 검증",
        "description": "사용자가 제공한 비밀번호와 등록된 비밀번호를 비교하여 로그인 검증을 수행합니다.",
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "로그인에 필요한 사용자 정보와 비밀번호를 포함하는 요청 본문",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "email": {
                  "type": "string",
                  "example": "user@example.com",
                  "description": "사용자의 이메일 (선택 사항)"
                },
                "phone": {
                  "type": "string",
                  "example": "010-1234-5678",
                  "description": "사용자의 전화번호 (선택 사항)"
                },
                "userId": {
                  "type": "string",
                  "example": "user123",
                  "description": "사용자 아이디 (선택 사항)"
                },
                "password": {
                  "type": "string",
                  "example": "password123",
                  "description": "로그인할 때 사용자가 입력한 비밀번호"
                }
              },
              "required": ["password"]
            }
          }
        ],
        "responses": {
          "200": {
            "description": "비밀번호 검증 성공",
            "schema": {
              "type": "object",
              "properties": {
                "isValid": {
                  "type": "boolean",
                  "example": true,
                  "description": "비밀번호가 일치하는지 여부"
                }
              }
            }
          },
          "400": {
            "description": "필수 정보 미제공 (이메일, 전화번호, 사용자 ID)",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "이메일, 휴대전화 번호 혹은 사용자 이름을 제공해주세요.",
                  "description": "에러 메시지"
                }
              }
            }
          },
          "404": {
            "description": "조건에 맞는 유저를 찾을 수 없는 경우",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "조건에 맞는 유저를 찾을 수 없습니다.",
                  "description": "에러 메시지"
                }
              }
            }
          },
          "401": {
            "description": "비밀번호가 일치하지 않는 경우",
            "schema": {
              "type": "object",
              "properties": {
                "message": {
                  "type": "string",
                  "example": "비밀번호가 일치하지 않습니다.",
                  "description": "에러 메시지"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "_id": { "type": "string", "example": "647d2f6e2c9d1c23c4b5e123" },
          "userId": { "type": "string", "example": "12345" },
          "username": { "type": "string", "example": "John Doe" },
          "email": { "type": "string", "example": "john.doe@example.com" },
          "birth": { "type": "string", "example": "1990-01-01" },
          "phone": {
            "type": "array",
            "items": { "type": "string" },
            "example": ["123-456-7890"]
          },
          "gender": {
            "type": "string",
            "enum": ["m", "f", "n", "b"],
            "example": "m"
          },
          "country": { "type": "string", "example": "Korea" },
          "language": { "type": "string", "example": "en" },
          "profileImage": {
            "type": "string",
            "example": "https://example.com/profile.jpg"
          },
          "location": { "type": "string", "example": "Seoul, Korea" },
          "intro": { "type": "string", "example": "Hello, I am John Doe." },
          "followings": {
            "type": "array",
            "items": { "type": "string", "example": "1234567890abcdef" }
          },
          "followers": {
            "type": "array",
            "items": { "type": "string", "example": "abcdef1234567890" }
          },
          "mutedUsers": {
            "type": "array",
            "items": { "type": "string", "example": "abcdef1234567890" }
          },
          "blockedUsers": {
            "type": "array",
            "items": { "type": "string", "example": "1234567890abcdef" }
          },
          "isPrivate": { "type": "boolean", "example": false },
          "isAuthorized": { "type": "boolean", "example": true },
          "isAuthenticated": { "type": "boolean", "example": true },
          "social": {
            "type": "array",
            "items": { "type": "string", "enum": ["google", "naver", "kakao"] },
            "example": ["google"]
          },
          "createdAt": { "type": "string", "format": "date-time" },
          "updatedAt": { "type": "string", "format": "date-time" }
        },
        "required": [
          "userId",
          "username",
          "email",
          "birth",
          "gender",
          "location"
        ]
      },
      "Security": {
        "type": "object",
        "properties": {
          "twoFactorAuthentication": {
            "type": "string",
            "enum": ["sms", "app", "key", ""],
            "example": "sms"
          },
          "hideLabel": {
            "type": "boolean",
            "example": false
          },
          "protectRenewPassword": {
            "type": "boolean",
            "example": false
          },
          "connectedApps": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "app1"
            },
            "example": ["app1", "app2"]
          },
          "sessions": {
            "type": "array",
            "items": {
              "type": "string",
              "example": "session123"
            },
            "example": ["session123", "session456"]
          },
          "loginHistory": {
            "type": "array",
